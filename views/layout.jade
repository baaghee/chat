doctype 5
html
	head
		title fgdf
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
		link(rel='stylesheet', href='/styles/kendo.common.min.css')
		link(rel='stylesheet', href='/styles/kendo.metro.min.css')
		link(rel='stylesheet', href='/stylesheets/main.css')
		link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
		script(src='/socket.io/socket.io.js')
		script(src='/js/jquery.min.js')
		script(src='/javascripts/bootstrap.min.js')
		script(src='/js/kendo.web.min.js')
		script(src='/templates.js')
		script(src='/javascripts/app.js')
		script window.user = #{locals.session.passport.user};
	body
		block content
		#tweetModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
				h3 New Tweet
			.modal-body
				div#tweet-input
				div#limit 160
			.modal-footer
					button.btn.tweet-btn Tweet
					button.btn(data-dismiss='modal', aria-hidden='true') Close

		#accept-friend.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
				h3 Would you like to invite Cog to chat
			.modal-body
				button.btn.tweet-btn Yes
				button.btn(data-dismiss='modal', aria-hidden='true') No

		#waiting-friend.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
				h3 Your chat request to Cog is pending confirmation
			.modal-body
				button.btn.tweet-btn Cancel Request
				button.btn(data-dismiss='modal', aria-hidden='true') Close

		#invite-friend.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
				h3 Invite Cog to instanTweet
			.modal-body
				p A tweet will be sent to Cog on your behalf of you inviting him to use instaTweet 
				button.btn.tweet-btn Send Invitation
				button.btn(data-dismiss='modal', aria-hidden='true') Cancel
					